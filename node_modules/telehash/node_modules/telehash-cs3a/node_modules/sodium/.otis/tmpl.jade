doctype html
html
  head
    title= title
    meta(http-equiv="content-type", content="text/html; charset=UTF-8")
    link(rel="stylesheet", media="all", href="#{relativeDir}doc-style.css")
    script(src="#{relativeDir}doc-filelist.js")
    - var setVars = "<script>var relativeDir = '" + relativeDir + "', thisFile = '" + filename + "', defaultSidebar = " + sidebar + ";</script>"
    | !{setVars}
    script(src="#{relativeDir}doc-script.js")
  body
    #sidebar_wrapper
      #sidebar_switch
        span.tree Files
        span.headings Headings
      #tree
      #headings
        each _heading in headings
          div(class="heading h" + _heading.level)
            a(href="#" + _heading.id)!= _heading.text
    #sidebar-toggle
    #container!= content


